<h1><%= @article.title %></h1>
<% unless @article.user.nil? %>
	<p>
		Written by: <%= @article.user.email %>
	</p>	
<% end %>
<p>
	Visits: <%= @article.visits_count %>
</p>
<div>
	<%= @article.body %>
</div>
<div class="field">
	<h3>Comments</h3>
	<%= render "comments/form" %>
	<ul>
		<% @article.comments.each do |comment| %>
			<li>
				<%= comment.body %> - <%= comment.user.email %>
			</li>
		<% end %>
	</ul>
</div>
<div>
	<%= link_to "Edit", edit_article_path(@article) %>
</div>