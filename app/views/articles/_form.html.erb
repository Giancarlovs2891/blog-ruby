<% name ||= "New" %>
<h1><%= name %> article</h1>
<%= form_for(@article) do |f| %>
	<% @article.errors.full_messages.each do |message| %>
		<div class="be-red white top-space">
			* <%= message %>
		</div>			
	<% end %>
	<div class="field">
		<%= f.text_field :title, placeholder: "Title", class: "form-control" %>
	</div>
	<div class="field">
		<%= f.text_area :body, placeholder: "Write the content here", style: "height:250px;", class: "form-control" %>	
	</div>
	<div class="field">
		<%= f.submit "Save", class: "btn be-red white" %>
	</div>
<% end %>	